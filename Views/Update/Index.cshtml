@using Gallery.Entity
@{
    Layout = "_Dashboard";
    ViewData["Title"] = "Home Page";
}
@model Product
<h2 style="text-align: center;" class="mt-3">Güncelleme</h2>

<div class="form-group">
    <label>Görseller</label>
    <div class="row">
        @foreach (var image in Model.Images)
        {
        <div class="col-md-3 mb-2">
            <img src="@Url.Content(image.Url)" alt="Product Image" class="img-fluid" />
        </div>
        }
    </div>
</div>


<hr>
<div class="row" style="justify-content: center; margin-left: 5px;">
    <div class="col-md-11" style="align-items:center;">
        <form class="form mt-3" asp-action="Index" asp-controller="Update" method="post">
            <input type="hidden" asp-for="ProductId" /> <!-- Ürün ID'si (gizli alan) -->

            <div class="form-group">
                <label asp-for="Name">Ürün Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Açıklama</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="Amount">Fiyat</label>
                <input asp-for="Amount" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="CategoryId">Kategori</label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control" style="width: 250px;" readonly>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <input asp-for="Images" type="file" multiple class="form-control" />
            </div>



            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>


